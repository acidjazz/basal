
extends ../extends/layout

block content
  .page.margined.client
    .label Client Name
    .input.input-name.selectize-input
      input(type="text")
    .clear
    .label Profile Picture
    .input.input-image
      .picture
      input(type="file",name="file",accept="image/*")
      button.cta Choose an image or drag it here
      .croppie
    .clear
    .label Collaborators
    .input.input-users
      input(type="text")
    .clear
    .submit
      button.ctap Submit

  script.
    Page = 'clients';
    Global.init = 'Client';
