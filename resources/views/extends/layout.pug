| !{'\n\n'}
doctype
html(lang='en')
  head
    title #{self.config.meta.title}

    script(type='text/javascript', src='/js/vendor.js')
    script(type='text/javascript', src='/js/bundle.js')

    meta(http-equiv="X-UA-Compatible",content="IE=Edge,chrome=1")
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name='viewport', content='user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width, height=device-height')
    link(rel='stylesheet',href="/css/vendor.css",type='text/css',media='all')
    link(rel='stylesheet',href="/css/main.css",type='text/css',media='all')
    link(href='https://fonts.googleapis.com/css?family=Monoton|Roboto:100,200,300,400,500,600,700',rel='stylesheet',type='text/css')

    script(type='text/javascript').

      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', '#{self.config.meta.trackingID}', 'auto');
      ga('require', 'linkid');
      ga('send', 'pageview');

    //- google
    meta(name='description',content=self.config.meta.description)
    meta(name='keywords',content=self.config.meta.keywords)

    script(type='application/ld+json').
      {
        "@context": "http://schema.org",
        "@type": "Organization",
        "url": "#{self.config.meta.url}",
        "logo": "#{self.config.meta.url}#{self.config.meta.share}"
      }

    meta(property='og:url',content=self.config.meta.url)
    meta(property='og:title',content=self.config.meta.title)
    meta(property='og:image',content=self.config.meta.url + self.config.meta.share)
    meta(property='og:description',content=self.config.meta.description)

    meta(property='og:type',content='website')

    //- twitter
    meta(name='twitter:card',content='summary_large_image')
    meta(name='twitter:title',content=self.config.meta.title)
    meta(name='twitter:description',content=self.config.meta.description)
    meta(name='twitter:image',content=self.config.meta.url + self.config.meta.share)
    meta(name='twitter:image:width','1200')
    meta(name='twitter:image:height','630')

    include ../partial/favicon

  body
    include ../includes/notice
    include ../includes/prompt
    include ../includes/spinner
    include ../includes/header
    //include ../includes/menu
    .container
      block content
    include ../includes/footer
    script.
      Global.i()
