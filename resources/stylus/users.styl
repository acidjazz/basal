.user
  border 1px solid gc(black1)
  padding 10px 120px 10px 10px
  float left
  position relative
  > .profile
    position absolute
    top 10px
    right 10px
    width 100px
    height 100px
    border-radius 50%
    overflow hidden
    > img
      width inherit
      height inherit
  > .name
    gf(h2)
    padding 0 0 10px 0

  > .details
    > .detail
      padding 10px 5px
      clear both
      > .label
        float left
        width 100px
      > .value
        float left
        &.toggle > input
          font-size 40px
          margin 0
