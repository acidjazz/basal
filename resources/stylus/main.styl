vendor-prefixes ?= webkit moz o ms official

@import '/include/mixins'
@import guide
@import '/include/*'

.clear
  clearfix()

body
  background-color gc(white1)
  color gc(black3)
  margin 0
  padding 0
  gf(c1)

a
  text-decoration none
  color gc(black2)

::selection
  color gc(skin1)
  background-color gc(cyan1)

.hidden
  visibility hidden
.loadingscreen
  position absolute
  fullsize()

.page
  margin auto
  min-height 300px
  &.margined
    margin 20px 50px
  > .title
    gf(h1)
    padding 0 0 20px 0
  > .content
    min-height 100px

time > svg
  width 15px
  height 15px
  margin 0 10px

*:focus
  outline: 1px solid gc(green3)

.ctap
  user-select none
  cursor pointer
  border-top 1px solid gc(green1)
  border-left 1px solid gc(green1)
  border-right 1px solid gc(green1)
  background-color gc(green2)
  color gc(white1)
  background linear-gradient(top, gc(green2), gc(green1))
  border-radius 4px
  &:hover
    background linear-gradient(top, gc(green3), gc(green1))
  &:active
    background radial-gradient(gc(green2), gc(green1))

.cta
  user-select none
  cursor pointer
  border-top 1px solid gc(grey3)
  border-left 1px solid gc(grey3)
  border-right 1px solid gc(grey3)
  background-color gc(grey2)
  background linear-gradient(top, gc(grey2), gc(grey3))
  border-radius 4px
  &:hover
    background linear-gradient(top, gc(grey1), gc(grey3))
  &:active
    background radial-gradient(gc(grey2), gc(grey3))

.ctab
  user-select none
  cursor pointer
  background gc(blue1)
  border 1px solid gc(blue2)
  background linear-gradient(to bottom, gc(blue1), gc(blue2))
  border-radius 4px
  color gc(white1)

@import 'listing.styl'

@import 'notfound.styl'

@import 'dashboard.styl'
@import 'users.styl'
@import 'clients.styl'
@import 'structures.styl'

