vendor-prefixes ?= webkit moz o ms official

@import '/include/mixins'
@import guide
@import '/include/*'

.clear
  clearfix()

body
  background-color gc(white1)
  color gc(black3)
  margin 0
  padding 0
  gf(c1)

a
  text-decoration none
  color gc(black2)

::selection
  color gc(skin1)
  background-color gc(cyan1)

.hidden
  visibility hidden
.loadingscreen
  position absolute
  fullsize()

.page
  margin auto
  min-height 300px
  &.margined
    margin 20px 50px
  > .title
    gf(h1)
    padding 0 0 20px 0
  > .content
    min-height 100px

time > svg
  width 15px
  height 15px
  margin 0 10px

@import 'notfound.styl'

@import 'dashboard.styl'
@import 'users.styl'
@import 'clients.styl'

