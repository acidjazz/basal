.page.entries
  > .deleted
    float right
    width 33px
    height 33px
    padding 5px
    margin 0 10px 0 0
    &:hover
      background-color gc(grey1)
      border-radius 3px
    onoff()
    &.active
      > svg
        fill gc(red1)
  > .title
    float left
    gf(h2b)
    margin 5px 0 0 0
  > .ctap
    float right
    gf(c1b)
    padding 6px 12px
    color gc(white1)

  > .content
    padding 20px 0
