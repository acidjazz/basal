.page.entries

  > .ctab
    float right
    width 34px
    height 34px
    line-height 34px
    gf(h2)
    text-align center
    margin 0 0 20px 0

  > .content
    padding 20px 0

  > #template
    display none

  > .add
    margin 10px 0
    padding 10px
    border 1px solid gc(grey1)
    margin auto
    > .select
      min-width 200px
      float left
      margin 10px 20px
    > .body 

      > .entity
        border-top 1px solid gc(grey1)
        padding 10px
        &.entity_Blog > .blog > .editor
          min-height 100px 
        &.entity_Text > .input > input
          width 100%

        > .label
          float left
          width 100px
          padding 10px
          gf(c1b)
          color gc(black1)
        > .input
          float right
          width 80%

    > .submit
      gf(c1b)
      padding 10px
      float right
      margin 10px
      onoff()

