header
  height 80px
  background-color gc(black4)
  > .inner
    padding 20px
    max-width 930px
    margin auto
    > .name
      float left
      gf(h2b)
      margin 7px 0 0 21px
      color gc(white1)
      onoff()
    > .client
      onoff()
      float left
      margin 0 -6px 0 0
      > .name
        gf(h2b)
        float left
        line-height 40px
        color gc(white1)
      > .picture
        width 40px
        height 40px
        background-size cover
        float left
        margin 0 20px 0 0
        border-radius 3px

    > .menu
      float left
      onoff()
      > .divider
        width 5px
        height 40px
        background-color gc(black1)
        float left
        margin 0 10px 0 20px
      > .option
        onoff()
        float left
        gf(c2b)
        padding 5px 8px
        margin 7px 5px 0 5px
        color gc(grey3)
        &:hover
          color gc(white1)
        &.active
          background-color gc(black6)
          border-radius 3px

    > .me
      float right
      > .picture
        onoff()
        cursor pointer
        width 40px
        height 40px
        border 1px solid gc(black1)
        border-radius 50%
        overflow hidden
        position relative
        > .image
          width 36px
          height 36px
          background-size contain
        &:hover > .logout
          opacity 1
        > .logout
          position absolute
          top 0
          bottom 0
          left 0
          right 0
          opacity 0
          background-color rgba(gc(white2), 0.5)
          transition opacity 0.2s linear
          border-radius 50%

      > .profile
        float left
        cursor pointer
        width 40px
        height 40px
        border-radius 50%
        border 2px solid gc(black1)
        overflow hidden
        transition background-color 0.2s linear
        animation fadeIn 0.2s linear 0.1s both
        background-color gc(black5)
        onoff()
        &:hover
          background-color gc(grey3)
        margin 0 0 0 5px
        > svg
          width 50px
          height 50px
          margin -7px 0 0 -7px
      > .oauths
        text-align center
        onoff()
        float left
        &.offing > .oauth.facebook
          animation fadeOut 0.2s linear 0.3s both
        &.offing > .oauth.github
          animation fadeOut 0.2s linear 0.2s both
        &.offing > .oauth.google
          animation fadeOut 0.2s linear 0.1s both
        > .oauth
          float left
          cursor pointer
          width 40px
          height 40px
          margin 0 0 0 5px
          border-radius 50%
          border 2px solid gc(black2)
          cursor pointer
          transition background-color 0.2s linear
          background-color gc(grey1)
          &:hover
            background-color gc(white1)
          > svg
            width 20px
            height 20px
            margin 8px 0 0 0
          &.facebook
            animation fadeIn 0.2s linear 0.1s both
            > svg path
              fill gc(facebook_blue)
          &.github
            animation fadeIn 0.2s linear 0.2s both
            > svg path
              fill gc(github_blue)
          &.google
            animation fadeIn 0.2s linear 0.3s both
            > svg path
              fill gc(google_red)
          &.twitter
            animation fadeIn 0.2s linear 0.4s both
            > svg path
              fill gc(twitter_blue)
@keyframes blink
  from
    opacity 0.1
  to
    opacity 1
