header
  > .inner
    padding 20px
    > .name
      float left
      gf(h2b)
      margin 7px 0 0 70px
    > .client
      float right
      margin 10px 40px 0 20px
      > .name
        gf(c2b)
    > .me
      float right
      > .picture
        onoff()
        cursor pointer
        width 40px
        height 40px
        border 2px solid gc(black2)
        border-radius 50%
        overflow hidden
        position relative
        > .image
          width 36px
          height 36px
          background-size contain
        &:hover > .logout
          opacity 1
        > .logout
          position absolute
          top 0
          bottom 0
          left 0
          right 0
          opacity 0
          background-color rgba(gc(white2), 0.5)
          transition opacity 0.2s linear
          border-radius 50%

      > .profile
        float left
        cursor pointer
        width 40px
        height 40px
        border-radius 50%
        border 2px solid gc(black2)
        overflow hidden
        transition background-color 0.2s linear
        animation fadeIn 0.2s linear 0.1s both
        onoff()
        &:hover
          background-color gc(white1)
        margin 0 0 0 5px
        > svg
          width 50px
          height 50px
          margin -7px 0 0 -7px
      > .oauths
        text-align center
        onoff()
        float left
        &.offing > .oauth.facebook
          animation fadeOut 0.2s linear 0.3s both
        &.offing > .oauth.github
          animation fadeOut 0.2s linear 0.2s both
        &.offing > .oauth.google
          animation fadeOut 0.2s linear 0.1s both
        > .oauth
          float left
          cursor pointer
          width 40px
          height 40px
          margin 0 0 0 5px
          border-radius 50%
          border 2px solid gc(black2)
          cursor pointer
          transition background-color 0.2s linear
          &:hover
            background-color gc(grey1)
          > svg
            width 20px
            height 20px
            margin 8px 0 0 0
          &.facebook
            animation fadeIn 0.2s linear 0.1s both
            > svg path
              fill gc(facebook_blue)
          &.github
            animation fadeIn 0.2s linear 0.2s both
            > svg path
              fill gc(github_blue)
          &.google
            animation fadeIn 0.2s linear 0.3s both
            > svg path
              fill gc(google_red)
          &.twitter
            animation fadeIn 0.2s linear 0.4s both
            > svg path
              fill gc(twitter_blue)
@keyframes blink
  from
    opacity 0.1
  to
    opacity 1
