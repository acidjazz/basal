.prompt
  position fixed
  top 50%
  left 50%
  max-width 640px
  min-width 320px
  background-color gc(white1)
  border 1px solid gc(black1)
  box-shadow 0 0 16px 2px gc(black2), 0.5
  z-index 21
  onoff()
  animation scaleInMid 0.6s ease-in-out 0s both
  animation-timing-function: cubic-bezier(0.87, -0.41, 0.19, 1.44);
  &.offing
    animation scaleOutMid 0.2s linear 0s both
      
  > .inner
    padding 20px 50px
    position relative
    animation fadeIn 0.1s linear 0.6s both
    > .cancel
      position absolute
      top 0
      right 0
      cursor pointer
      font-size 20px
      width 20px
      padding 10px
      text-align center
    > .title
      gf(h2)
    > .copy
      margin 20px 0
      > pre
        overflow auto
        background-color gc(white2)
        padding 10px
      > b
        gf(c1b)
    > .textarea
      &.off
        display none
      &.on
        display block
      > textarea
        gf(c1)
        display block
        width 500px
        height 125px
        margin 0 0 20px 0
        padding 10px
    > .options
      margin 0 -10px 0 0
      text-align right
      white-space nowrap
      > .option
        display inline-block
        padding 10px 20px
        &.on
          display inline-block
        &.off
          display none
        cta()
        &.active
          ctab()
