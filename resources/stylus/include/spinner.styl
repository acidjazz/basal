.spinner 
  onoff()
  position absolute
  width 100px
  height 100px
  top 20px
  left 20px
  z-index 30
  background-color rgba(gc(white1), 0.7)

  > .inner
    position absolute
    width 50px
    height 50px
    top 50%
    left 50%
    margin-top -25px
    margin-left -25px
    > .loader 
      position relative;
      top 50%;
      left 50%;
      transform translate(-50%, -50%);
      width 50px;
      height 50px;
      animation loadingc 3000ms linear alternate infinite;
      border-radius 50%;
      
      &:after 
        content '';
        position absolute;
        border-radius 50%;
        top 50%;
        left 50%;
        border 0px solid rgba(gc(white1), 0.5)
        transform translate(-50%, -50%);
        animation loading 1000ms ease-out forwards infinite;
      
@keyframes loading 
  0% 
    border 0px solid rgba(gc(white1), 0.5)
  20% 
    border 8px solid rgba(gc(white1), 0.5)
    width 0%;
    height 0%;
  100% 
    border 8px solid rgba(gc(white1), 0.5)
    width 100%;
    height 100%;
  
@keyframes loadingc
  0% 
    background-color gc(cyan1)
    opacity 0
  20% 
    background-color gc(cyan1)
    opacity 1
  50% 
    background-color gc(orange1)
  80% 
    background-color gc(yellow1)
    opacity 1
  100% 
    background-color gc(yellow1)
    opacity 0
  

