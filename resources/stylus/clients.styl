.page.clients
  > .add
    float right
    > .ctap
      float right
      width 40px
      height 40px
      line-height 40px
      text-align center
      gf(h2)
      cursor pointer
      transition background-color 0.1s linear
      &:hover
        background-color gc(cyan1)
        color gc(white1)
    > .input
      float right
      onoff()
      animation cellInX 0.2s linear
      > input
        gf(c2)
        padding 5px 10px
        border 1px solid gc(black2)
        margin 5px 20px 0 0
