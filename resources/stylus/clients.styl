.page.clients
  > .add
    float right
    > .cta
      float right
      width 40px
      height 40px
      border 2px solid gc(black1)
      line-height 40px
      text-align center
      border-radius 50px
      gf(h2)
      cursor pointer
      transition background-color 0.1s linear
      &:hover
        background-color gc(cyan1)
        color gc(white1)
    > .input
      float right
      onoff()
      animation cellInX 0.2s linear
      > input
        gf(c2)
        padding 5px 10px
        border 1px solid gc(black2)
        margin 5px 20px 0 0
  > .content
    border 1px solid gc(grey1)

    > .client
      padding 10px
      border-bottom 1px solid gc(grey1)
      animation cellInX 0.1s 0s ease-in both
      for num in 0..20
        &:nth-child({num})
          animation-delay unit(num*0.1, 's')
      &:hover
        background-color gc(grey2)
      &:last-child
        border-bottom 1px solid transparent
      > .name
        gf(c1b)
        display inline-block
        min-width 200px
      > .created, > .updated
        display inline-block
        min-width 200px
        > time
          gf(c1b)

