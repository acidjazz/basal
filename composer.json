{
    "name": "basal",
    "description": "minimal content management",
    "keywords": ["basal", "cms", "minimal"],
    "license": "MIT",
    "type": "project",
    "repositories": [
      {
        "type": "vcs",
        "url": "https://github.com/acidjazz/whoops"
      }
    ],
    "require": {
        "php": ">=7",
        "laravel/lumen-framework": "5.2.*",
        "vlucas/phpdotenv": "~2.2",
        "jenssegers/mongodb": "^3.0",
        "barryvdh/laravel-debugbar": "^2.2",
        "acidjazz/larpug": "^0.02.0",
        "acidjazz/larjectus": "^0.4.0",
        "filp/whoops": "dev-master",
        "acidjazz/summon": "^1.2",
        "lusitanian/oauth": "^0.8.9"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "phpunit/phpunit": "~4.0",
        "mockery/mockery": "~0.9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/",
            "database/"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ]
    }
}
